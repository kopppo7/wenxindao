	border-radius: 24px 24px 0px 0px;
	padding: 0 40rpx;
	z-index: 801;
}
.pop-tit{
	font-size: 36rpx;
	line-height: 114rpx;
	text-align: center;
}
.pop-close{
	position: absolute;
	top: 40rpx;
	right: 40rpx;
	width: 36rpx;
	height: 36rpx;
}
.pop-cont{
	text-align: center;
}
