}
.tansuo-row .box2 .avatar-box text{
	position: absolute;
	top: 4rpx;
	right: 12rpx;
	width: 16rpx;
	height: 16rpx;
	background: linear-gradient(225deg, #F0273F 0%, #BC61E7 100%);
	box-shadow: 0px 2px 2px rgba(188, 97, 231, 0.2);
	border-radius: 50%;
}
.tansuo-row .box2 .name{
