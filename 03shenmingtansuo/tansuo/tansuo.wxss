.z-tab2{
	padding: 24rpx 24rpx 24rpx 0;
	margin-bottom: 32rpx;
	white-space: nowrap;
}
.z-tab2 .item{
	display: inline-block;
	font-size: 24rpx;
	width: 104rpx;
	height: 60rpx;
	line-height: 58rpx;
	text-align: center;
	background: linear-gradient(90.81deg, rgba(170, 94, 192, 0.2) -12.46%, rgba(178, 139, 222, 0.2) 45.22%, rgba(95, 104, 188, 0.2) 101.73%);
	border: 0.5px solid rgba(255, 255, 255, 0.2);
	backdrop-filter: blur(12px);
	border-radius: 46rpx;
	margin-right: 24rpx;
}
.z-tab2 .item:first-child{
	margin-left: 40rpx;
}
.z-tab2 .item.active{
	background: #FFB58C;
	color: #010206;
}
