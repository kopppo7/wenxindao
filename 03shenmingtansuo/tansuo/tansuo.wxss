}
.yinyan-box .box1{

}
.yinyan-box .box1 .avatar{
	display: block;
	width: 224rpx;
	height: 224rpx;
	filter: drop-shadow(0px 8px 8px rgba(131, 44, 177, 0.1));
	border-radius: 50%;
	overflow: hidden;
	margin: 0 auto 48rpx;
}
.yinyan-box .box1 .txt{
	font-size: 30rpx;
	text-align: center;
}
.yinyan-box .box1 .txt view{
	margin-bottom: 30rpx;
}
.yinyan-box .box2{

}
.yinyan-box .box2 .s1{
	font-size: 26rpx;
	line-height: 36rpx;
	color: #B6B2CF;
	background: rgba(29, 31, 48, 0.8);
	border: 0.5px solid rgba(255, 255, 255, 0.2);
	backdrop-filter: blur(12.2323px);
	padding: 24rpx;
	margin-bottom: 40rpx;
	border-radius: 24rpx;
}
.yinyan-box .box2 .s2{
	display: flex;
	justify-content: space-between;
	padding: 0 24rpx;
}
.yinyan-box .box2 .s2 .s2-item{

}
.yinyan-box .box2 .s2 .s2-item .avatar-box{
	position: relative;
	display: block;
	width: 112rpx;
	height: 112rpx;
	margin: 0 auto 8rpx;
	border-radius: 50%;
}
.yinyan-box .box2 .s2 .s2-item.active .avatar-box{
	border: 2px solid #FFB58C;
	box-shadow: 0px 0px 0px 3px rgba(255, 181, 140, 0.25);
}
.yinyan-box .box2 .s2 .s2-item .avatar-box text{
	font-size: 24rpx;
	text-align: center;
	position: absolute;
	top: 0;
	left: 0;
	width: 32rpx;
	height: 32rpx;
	line-height: 32rpx;
	background: linear-gradient(225deg, #F0273F 0%, #BC61E7 100%);
	box-shadow: 0px 2px 2px rgba(188, 97, 231, 0.2);
	border-radius: 50%;
}
.yinyan-box .box2 .s2 .s2-item .avatar-box .avatar{
	display: block;
	width: 100%;
	height: 100%;
	border-radius: 50%;
}
.yinyan-box .box2 .s2 .s2-item .name{
	font-size: 28rpx;
	text-align: center;
	color: #ffffff;
}
.jdt-box{
	position: relative;
	height: 8rpx;
	background: rgba(182, 178, 207, 0.18);
}
.jdt-box text{
	position: absolute;
	left: 0;
	top: 0;
	bottom: 0;
	background: #FFB58C;
	border-radius: 0px 2px 2px 0px;
}
.tansuo-row{

}
