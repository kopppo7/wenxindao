page{
	padding-bottom: 200rpx;
}
.intro-row1{
	display: flex;
	margin-bottom: 48rpx;
	padding-top: 30rpx;
}
.intro-row1 .pic{
	flex: 0 0 180rpx;
	height: 260rpx;
	margin-right: 32rpx;
}
.intro-row1 .txt{
	flex: 1;
}
.intro-row1 .txt .s1{
	font-size: 40rpx;
	margin-bottom: 8rpx;
}
.intro-row1 .txt .s2{
	font-size: 26rpx;
	margin-bottom: 32rpx;
}
.intro-row1 .txt .s2 span{color: #fff;background-color: transparent;}
.intro-row1 .txt .s3{
	font-size: 24rpx;
  padding-left: 40rpx;
  box-sizing: border-box;
	margin-bottom: 26rpx;
	color: #ffb58c;
	background: url(data:image/svg+xml;base64,PHN2ZyB3aWR0aD0iMTYiIGhlaWdodD0iMTciIHZpZXdCb3g9IjAgMCAxNiAxNyIgZmlsbD0ibm9uZSIgeG1sbnM9Imh0dHA6Ly93d3cudzMub3JnLzIwMDAvc3ZnIj4KPGNpcmNsZSBjeD0iOCIgY3k9IjguNSIgcj0iNS41IiBzdHJva2U9IiNGRkI1OEMiLz4KPHBhdGggZD0iTTExIDguNTQ1NDZIOFY0LjU0NTQ2IiBzdHJva2U9IiNGRkI1OEMiLz4KPC9zdmc+Cg==) no-repeat left center;
	-webkit-background-size: 32rpx auto;background-size: 32rpx auto;
}
.intro-row1 .txt .s4{
	display: flex;
}
.intro-row1 .txt .s4 text{
	font-size: 22rpx;
	min-width: 120rpx;
  padding: 0 10rpx;
  box-sizing: border-box;
	height: 48rpx;
	line-height: 48rpx;
	text-align: center;
	background: rgba(255, 255, 255, 0.16);
	border-radius: 60rpx;
}
.intro-row1 .txt .s4 text + text{
	margin-left: 16rpx;
}
.intro-row2{
	background: rgba(182, 178, 207, 0.12) url(data:image/svg+xml;base64,) no-repeat right 24rpx center;
	-webkit-background-size: 32rpx auto;background-size: 32rpx auto;
	border-radius: 8px;
  padding: 0 24rpx;
  box-sizing: border-box;
	margin-bottom: 48rpx;
}
.intro-row2 text{
	font-size: 28rpx;
	line-height: 88rpx;
  padding-left: 44rpx;
  box-sizing: border-box;
	background: url(data:image/svg+xml;base64,) no-repeat left center;
	-webkit-background-size: 32rpx auto;background-size: 32rpx auto;
}
.z-tit1{
	position: relative;
	font-size: 36rpx;
	color: #ffffff;
  padding-left: 22rpx;
  box-sizing: border-box;
	margin-bottom: 32rpx;
}
.z-tit1:before{
	content: '';
	position: absolute;
	left: 0;
	top: 50%;
	margin-top: -17rpx;
	width: 6rpx;
	height: 34rpx;
	background: #FFB58C;
	border-radius: 12rpx;
}
.intro-row3{

}
.z-tit2{
	position: relative;
	font-size: 30rpx;
  padding-left: 20rpx;
  box-sizing: border-box;
	margin-bottom: 24rpx;
}
.z-tit2:before{
	content: '';
	position: absolute;
	left: 0;
	top: 50%;
	margin-top: -4rpx;
	width: 8rpx;
	height: 8rpx;
	background: #FFB58C;
	border-radius: 50%;
}
.g-box{
	background: rgba(182, 178, 207, 0.12);
	border-radius: 16rpx;
	padding: 24rpx;
  margin-bottom: 24rpx;
  box-sizing: border-box;
}
.g-box .span_class,.g-box .p_class,.intro-row1 .span_class,.intro-row1 .p_class{color: #fff!important;background-color: transparent!important;}
.intro-row3 .desc{
	font-size: 26rpx;
	color: #ffffff;
}
.intro-row3 .box .desc text{
	color: #ffb58c;
}
.z-list2{

}
.z-list2 .item{
	display: flex;
	align-items: center;
	margin-bottom: 24rpx;
}
.z-list2 .item .tit{
	display: flex;
	align-items: center;
	font-size: 26rpx;
	flex: 0 0 200rpx;
	color: #FFB58C;
}
.z-list2 .item .tit image{
	width: 36rpx;
	height: 80rpx;
	margin-right: 16rpx;
}
.z-list2 .item .desc{
	font-size: 26rpx;
}
.z-list3{

}
.z-list3 .tit-box{
	display: flex;
	align-items: center;
	margin-bottom: 24rpx;
}
.z-list3 .tit-box .avatar{
	width: 72rpx;
	height: 72rpx;
	margin-right: 10rpx;
	border-radius: 50%;
}
.z-list3 .tit-box .name-time{

}
.z-list3 .tit-box .name-time .name{
	font-size: 28rpx;
}
.z-list3 .tit-box .name-time .time{
	font-size: 22rpx;
	opacity: .5;
}
.z-list3 .desc{
	font-size: 28rpx;
}
.bottom-box{
	position: fixed;
	bottom: 0;
	padding-bottom: 68rpx;
	padding-top: 20rpx;
	left: 0;
	right: 0;
	background: #171A28;
	z-index: 100;
}
.bottom-box .box{
  padding: 0 40rpx;
  box-sizing: border-box;
	display: flex;
	align-items: center;
	justify-content: space-between;
	height: 120rpx;
}
.bottom-box .bottom-l{
	display: flex;
	align-items: center;
}
.bottom-box .bottom-l .money{
	font-size: 26rpx;
	color: #ffb58c;
}
.bottom-box .bottom-l .money text{
	font-size: 48rpx;
}
.bottom-box .bottom-l .year{
	font-size: 24rpx;
	opacity: .6;
	margin-right: 12rpx;
}
.bottom-box .bottom-l .tip{
	width: 28rpx;
	height: 28rpx;
}
.bottom-box .bottom-r{
	font-size: 28rpx;
	width: 252rpx;
	height: 88rpx;
	line-height: 88rpx;
	background: #7461E7;
	border-radius: 44rpx;
	text-align: center;
}
.bottom-box .btn-box{display: -webkit-flex;display: flex;justify-content: center;/* 水平居中 */align-items:center;padding: 0 20rpx;}
.bottom-box .btn-box .bottom-r{margin: 0 20rpx;height: 64rpx;line-height: 64rpx;}
.bottom-box .btn-box .bottom-r.bottom-r2{
	background-color: #FFB58C;
	color: #010206;
}
