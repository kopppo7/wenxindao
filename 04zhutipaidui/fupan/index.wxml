<!--04zhutipaidui/fupan/index.wxml-->
<view class="fupan">
  <view class="title">
    <image
      src="../../static/zt-zan1.png"
      mode="scaleToFill"
    />
    <view class="txt">
      为他点赞提升匹配到的概率
    </view>
  </view>
  <view class="list">
    <view class="person">
      <view class="avatar">
        <image
          src="https://wenxin-file.oss-cn-beijing.aliyuncs.com/system/images/avatar0.jpg"
          mode="scaleToFill"
        />
        <view class="num">1</view>
        <view class="tx">投诉</view>
      </view>
      <view class="name">玩家啊1</view>
      <view class="zan">
        <image
          src="../../static/zt-zan2.png"
          mode="scaleToFill"
          wx:if="{{noZan}}"
        />
        <image
          src="../../static/zt-zan1.png"
          mode="scaleToFill"
          v-else
        />
        <view class="txt" wx:if="!noZan">2</view>
      </view>
    </view>
  </view>
  <view class="bot-fix">
    <view class="countdown">
      <text class="time">45s </text>
      <text>后关闭复盘环节</text>
    </view>
    <view class="btns">
      <view class="lx">联系客服</view>
      <view class="speak">
        <image
          src="../../static/room-audio1.png"
          mode="scaleToFill"
        />
        <text>点击说话</text>
      </view>
      <view class="leave">离开</view>
    </view>
  </view>
</view>
