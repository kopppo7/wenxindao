/* probe/invitation/index.wxss */
.outerBox{
  padding: 80rpx 40rpx;
  text-align: center;
  box-sizing: border-box;
}
.ititle{
  font-size: 40rpx;
  color: #ffffff;
  margin-bottom: 80rpx;
}
.box{
  padding: 40rpx 30rpx;
  box-sizing: border-box;
  background-color: rgba(255, 255, 255, 0.2);
}
.box .top{
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
}
.user image{
  border-radius: 50%;
  width: 48rpx;
  height: 48rpx;
  margin-right: 30rpx;
}
.box .top .txts{
  font-size: 32rpx;
}
.box .top .txts text{
  font-size: 32rpx;
  color: rgba(255, 181, 140, 1);
}
.cardBox{
  position: relative;
  width: 180rpx;
  height: 256rpx;
  margin: 40rpx auto;
}
.cardBox .cardimg{
 width: 100%;
 height: 100%;
}
.cardBox .btn-fan{
  position: absolute;
  top: 16rpx;
  right: 16rpx;
  width: 40rpx;
  height: 40rpx;
}
.greentxt {
  color: rgba(113, 215, 160, 1);
  font-size: 32rpx;
  margin-bottom: 24rpx;
}
.yellowtxt{
  color:rgba(255, 181, 140, 1);
  font-size: 32rpx;
  margin-bottom: 60rpx;
}
.agreen{
  font-size: 28rpx;
  color: #ffffff;
  background-color: rgba(116, 97, 231, 1);
  border-radius: 68rpx;
  width: 90%;
  height: 100rpx;
  line-height: 100rpx;
}

.picBox{
  position: relative;
  display: inline-block;
}
.pic {
  width: 168rpx;
  border-radius: 24rpx;
  margin-bottom: 16rpx;
}
.picBox .btn-fan{
  position: absolute;
	bottom: 8rpx;
	right: 8rpx;
	width: 48rpx;
	height: 48rpx;
}
.pop-big {
	position: fixed;
	top: 50%;
	left: 50%;
	-webkit-transform: translate(-50%, -50%);
	-moz-transform: translate(-50%, -50%);
	-ms-transform: translate(-50%, -50%);
	-o-transform: translate(-50%, -50%);
	transform: translate(-50%, -50%);
	z-index: 801;
}

.pop-big .big-pic {
	width: 670rpx;
	/* height: 998rpx; */
}

.pop-close-bot {
	position: absolute;
	bottom: -116rpx;
	left: 50%;
	margin-left: -48rpx;
	width: 96rpx;
	height: 96rpx;
	z-index: 801;
}