<view class="canvas-box my_canvas my_draw_canvas" id="my-canvas">
	<image
		mode="widthFix"
		class="canvas-bg my_draw_canvas"
		data-url="https://file.wxdao.net/2023-01/4b8c69c4-f7bf-4000-8a77-6f205ad0f647.png"
		data-type="image"
		src="https://file.wxdao.net/2023-01/4b8c69c4-f7bf-4000-8a77-6f205ad0f647.png"
	></image>
	<view class="my_draw_canvas canvas-content">
		<view class="date-mod my_draw_canvas">
			<view
				class="days my_draw_canvas"
				data-type="text"
				data-text="{{ nowDate.gregorianDay }}"
			>
				{{ nowDate.gregorianDay }}
			</view>
			<view class="date-box my_draw_canvas" data-type="text">
				<view
					class="lc my_draw_canvas"
					data-type="text"
					data-text="{{ nowDate.chineseMonth }}{{ nowDate.chineseDay }}"
				>
					{{ nowDate.chineseMonth }}{{ nowDate.chineseDay }}
				</view>
				<view class="gang my_draw_canvas" data-type="text" data-text="/">
					/
				</view>
				<view class="date my_draw_canvas" data-type="text"
                      data-text="{{nowDate.gregorianYear}}.{{nowDate.gregorianMonthBase1}}">
                    {{nowDate.gregorianYear}}.{{nowDate.gregorianMonthBase1}}
                </view>
			</view>
		</view>
		<view class="head-img my_draw_canvas">
			<image
				class="s1-l my_draw_canvas"
				mode="aspectFill"
				src="{{ headImg }}"
				data-type="image"
				data-url="{{ headImg }}"
			></image>
			<view
				class="name my_draw_canvas"
				data-type="text"
				data-text="{{ userName }}"
				>{{ userName }}</view
			>
			<image
				class="tuijian my_draw_canvas"
				mode="aspectFill"
				src="https://file.wxdao.net/2023-01/80273208-1940-4ca6-94c4-4f5bae1c92ac.png"
				data-type="image"
				data-url="https://file.wxdao.net/2023-01/80273208-1940-4ca6-94c4-4f5bae1c92ac.png"
			></image>
		</view>
		<view class="ts-det">
			<view class="pic">
				<image
					class="my_draw_canvas"
					mode="aspectFill"
					src="{{ det.imgUrl }}"
					data-type="image"
					data-url="{{ det.imgUrl }}"
				></image>
			</view>
			<view class="txt">
				<view
					data-type="text"
					data-text="{{ det.title }}"
					class="title my_draw_canvas"
					>{{ det.title }}</view
				>
				<view
					data-type="text"
					data-text="{{ det.introduce }}"
					class="desc my_draw_canvas"
					>{{ det.introduce }}</view
				>
			</view>
		</view>
