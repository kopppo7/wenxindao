.wp{
  padding-top: 24rpx;
  padding-bottom:204rpx;
}
.face{
  display: flex;
  align-items: center;
}
.face .pic{
  flex:0 0 96rpx;
  height: 96rpx;
  border-radius: 50%;
  overflow: hidden;
  margin-right: 16rpx;
}
.face .pic image{
  display: block;
  width: 100%;
  height: 100%;
}
.face .txt{
  flex:1;
}
.face .txt .name{
  font-size: 32rpx;
  color: #ffffff;
  margin-bottom: 12rpx;
}
.face .txt .date{
  color: #B6B2CF;
  font-size: 24rpx;
}
.tag-list{
  display: flex;
  align-items: center;
  margin-top: 40rpx;
  margin-bottom: 32rpx;
}
.tag-list .tag{
  padding: 8rpx 16rpx;
  box-sizing: border-box;
  border-radius: 8rpx;
  background: linear-gradient(224.5deg, rgba(137, 235, 241, 0.2) 1.92%, rgba(137, 235, 241, 0.08) 92.09%);
backdrop-filter: blur(12.2323px);
}
.tag-list .tag+.tag{
  margin-left: 16rpx;
}
.tag-list .tag.blue{
  color: #89EBF1;
}
.tag-list .tag.org{
color: #FFB58C;
}
.fakeImg{
  display: block;
  width: 272rpx;
  height: 402rpx;
  border-radius: 16rpx;
  margin-bottom: 16rpx;
}
.desc{
  font-size: 28rpx;
  color: #ffffff;
  line-height: 40rpx;
}
.content{
  background: rgba(182, 178, 207, 0.12);
  padding: 20rpx;
  border-radius: 40rpx;
  margin-bottom: 40rpx;
}
.foot{
  background-color: #010206;
  left: 0;
  right: 0;
  bottom: 0;
  height: 184rpx;
  position: fixed;
}