<!--    我的动态-->
    <block wx:if="{{pageTabIndex === 0}}">
        <!-- 切换 -->
        <view class="h-dt-tab">
            <view class="h-dt-tab-item {{cur_tab === index ? 'on' : ''}}"
                  bindtap="changeCurTab"
                  data-index="{{index}}"
                  data-type="{{item.type}}"
                  wx:for="{{tab}}" wx:key="index">
                <view class="title">{{item.title}}</view>
                <view class="num">{{index == 0 ?totalSum :item.num}}</view>
            </view>
        </view>
        <view class="mine-row3">
        <view class="title-box">
            <view class="title">我的动态</view>
            <!-- <image src="https://wenxin-file.oss-cn-beijing.aliyuncs.com/system/images/icon-filter.svg"></image> -->
        </view>
        <view class="trend-list">
            <view class="trend-item" wx:for="{{list}}"  wx:for-item="item" wx:key="id">
               <!-- 每日调频  wx:if="{{item.category==0}}" -->
            <view class="trend-item" wx:if="{{item.category==0}}" bindtap="detail" data-type="0" data-id="{{item.id}}">
                <view class="time mb12">{{item.addTime}}</view>
                <view class="box">
                     <view class="dot" data-index="{{index}}" catchtap="openPop">
                        <image mode="widthFix" src="https://wenxin-file.oss-cn-beijing.aliyuncs.com/system/images/h-icon-dot.png"></image>
                    </view>
                    <view class="title title0">{{item.categoryText}}</view>
                    <view class="type-list" wx:if="{{item.target.length > 0}}">
                        <view class="type-item c3" wx:for="{{item.target}}" wx:for-item="item1" wx:key="*this">{{item1}}</view>
                    </view>
                    <view>
                        <view class="txt">
                          {{item.contents.data[0].txt}}
                        </view>
                        <view class="picBox">
                          <image class="pic"  mode="widthFix" src="{{item.contents.imgUrl}}">
                          </image>
                          <image catchtap="openBig" data-pinurl="{{item.contents.imgUrl}}" class="btn-fan" src="https://wenxin-file.oss-cn-beijing.aliyuncs.com/system/images/icon-fan.png"></image>
                        </view>
                    </view>
                </view>
            </view>
            <!-- 生命探索 wx:if="{{item.category==2}}" -->
            <view class="trend-item"  wx:if="{{item.category==2}}" bindtap="detail" data-type="2" data-id="{{item.id}}">
                <view class="time mb12">{{item.addTime}}</view>
                <view class="box">
                    <view class="dot" data-index="{{index}}" catchtap="openPop">
                        <image mode="widthFix" src="https://wenxin-file.oss-cn-beijing.aliyuncs.com/system/images/h-icon-dot.png"></image>
                    </view>
                    <view class="title title1">{{item.categoryText}}</view>
                    <view class="type-list" wx:if="{{item.target.length > 0}}">
                        <view class="type-item c3" wx:for="{{item.target}}" wx:for-item="item1" wx:key="*this">{{item1}}</view>
                    </view>
                    <view style="padding-top:16rpx">
                        <!-- <image mode="widthFix" class="" src="{{item.contents.imgUrl}}"></image> -->
                        <view class="picBox">
                          <image class="pic" mode="widthFix"  src="{{item.contents.imgUrl}}">
                          </image>
                          <image catchtap="openBig" data-pinurl="{{item.contents.imgUrl}}" class="btn-fan" src="https://wenxin-file.oss-cn-beijing.aliyuncs.com/system/images/icon-fan.png"></image>
                        </view>
                        <view class="txt">
                            {{item.contents.tags}}
                        </view>
                    </view>
                    <!-- <view class="count-box">
                        <view class="avatar-box">
                            <image class="avatar" src="https://wenxin-file.oss-cn-beijing.aliyuncs.com/system/images/avatar1.jpg"></image>
                            <image class="avatar" src="https://wenxin-file.oss-cn-beijing.aliyuncs.com/system/images/avatar2.jpg"></image>
                            <image class="avatar" src="https://wenxin-file.oss-cn-beijing.aliyuncs.com/system/images/avatar3.jpg"></image>
                        </view>
                        <view class="txt"><text>3</text>人已参与</view>
                    </view> -->
                </view>
            </view>
            <!-- 主题派对 wx:if="{{item.category==1}}" -->
            <view class="trend-item" wx:if="{{item.category==1}}"  bindtap="detail" data-type="1" data-id="{{item.id}}">
                <view class="time mb12">{{item.addTime}}</view>
                <view class="box">
                    <view class="dot" data-index="{{index}}" catchtap="openPop">
                        <image mode="widthFix" src="https://wenxin-file.oss-cn-beijing.aliyuncs.com/system/images/h-icon-dot.png"></image>
                    </view>
                    <view class="title title2">{{item.categoryText}}</view>
                    <view class="type-list" wx:if="{{item.target.length > 0}}">
                        <view class="type-item c3" wx:for="{{item.target}}" wx:for-item="item1" wx:key="*this">{{item1}}</view>
                    </view>
                    <view style="display: flex;flex-wrap: wrap;padding-top:16rpx">
                      <view class="picBox" style="text-align: {{index%3==0?'left':(index%3==1?'center':'right')}};" wx:for="{{item.contents.imgUrl}}" wx:for-item="itemImg">
                          <image class="pic" mode="widthFix"  src="{{itemImg.imgUrl}}">
                          </image>
                          <image catchtap="openBig"  style="right: {{index%3==0?'30rpx':(index%3==1?'20rpx':'5rpx')}};" data-pinurl="{{itemImg.imgUrl}}" class="btn-fan" src="https://wenxin-file.oss-cn-beijing.aliyuncs.com/system/images/icon-fan.png"></image>
                        </view>
                        <!-- <image class="pic" src="https://wenxin-file.oss-cn-beijing.aliyuncs.com/system/images/1.png"></image>
                        <image class="pic" src="https://wenxin-file.oss-cn-beijing.aliyuncs.com/system/images/1.png"></image>
                        <image class="pic" src="https://wenxin-file.oss-cn-beijing.aliyuncs.com/system/images/1.png"></image>
                        <image class="pic" src="https://wenxin-file.oss-cn-beijing.aliyuncs.com/system/images/1.png"></image>
                        <image class="pic" src="https://wenxin-file.oss-cn-beijing.aliyuncs.com/system/images/1.png"></image> -->
                    </view>
                    <!-- <view class="count-box">
                        <view class="avatar-box">
                            <image class="avatar" src="https://wenxin-file.oss-cn-beijing.aliyuncs.com/system/images/avatar1.jpg"></image>
                            <image class="avatar" src="https://wenxin-file.oss-cn-beijing.aliyuncs.com/system/images/avatar2.jpg"></image>
                            <image class="avatar" src="https://wenxin-file.oss-cn-beijing.aliyuncs.com/system/images/avatar3.jpg"></image>
                        </view>
                        <view class="txt"><text>3</text>人已参与</view>
                    </view> -->
                </view>
              </view>
            </view>
        </view>
    </view>
    </block>
    <!--    我的订单-->
    <block wx:if="{{pageTabIndex === 1}}">
        <view class="wp">
            <view class="order-list" >
                <view class="item mb12" wx:for="{{list2}}" wx:for-item="item" wx:key="id">
                    <view class="s1">
                        <view class="s1-l">订单号：{{item.payId}}</view>
                        <view class="s1-r">¥
                            <text>{{item.paymentAmount+'/'+(item.types==2?'席位':'场')}}</text>
                        </view>
                    </view>
                    <view class="s2">
                        <view class="only" wx:if="{{item.types==2||item.types==0}}">单独购买</view>
                        <view class="friend" wx:else>好友结伴</view>
                        <view>{{item.title||''}}</view>
                    </view>
                    <view class="s3">
                        <view class="s3-l">下单时间：{{item.addTime}}</view>
                        <view class="s3-r" wx:if="{{item.status==1}}">
                            <view class="btn" bindtap="jump" data-type="{{item.types}}" data-id="{{item.id}}">去使用</view>
                        </view>
                    </view>
                </view>
            </view>
        </view>
    </block>
</view>

<view class="nav">
    <navigator url="/pages/index/index" hover-class="none" class="item active">
        <image class="pic" src="https://wenxin-file.oss-cn-beijing.aliyuncs.com/system/images/icon-nav1.png"></image>
        <view class="txt">问心岛</view>
    </navigator>
    <view class="item" bindtap="Init()">
        <image class="pic" src="https://wenxin-file.oss-cn-beijing.aliyuncs.com/system/images/icon-nav2.png"></image>
        <view class="txt">我的</view>
    </view>
</view>

<view class="page-bot" wx:if="{{showPop}}">
    <view class="page-mask" bindtap="closePop"></view>
    <view class="page-bot-btn">
        <view class="btn" catchtap="deleteItem">删除</view>
        <view class="btn" bindtap="closePop">取消</view>
    </view>
</view>


<!--放大卡牌-->
<block wx:if="{{bigPopStatus}}">
  <view class="pop-mask"></view>
  <view class="pop-big">
    <image class="big-pic" src="{{bigCardImgUrl}}" mode="widthFix"></image>
    <image class="pop-close-bot" src="https://wenxin-file.oss-cn-beijing.aliyuncs.com/system/images/pop-close.png" bindtap="closePopBig"></image>
  </view>
</block>
