/* 05chouyichou/index/index.wxss */
.pump-wrap{
    padding: 112rpx 0 152rpx;
    box-sizing: border-box;
}
.pump-swiper swiper{
    height: 770rpx;
}
.pump-swiper swiper-item{
    text-align: center;
    width: 100%;
    height: 100%;
}
.pump-swiper .pic{
    transform: scale(0.8);
    transition: all 0.3 ease;
}
.pump-swiper .pic image{
    display: block;
    width: 100%;
    border-radius: 12rpx;
    height: 100%;
}
.pump-swiper .active{
    transform: scale(1);
}
.pump-footer{
    text-align: center;
    padding-bottom: 70rpx;
}
.pump-footer .txt{
    font-size: 32rpx;
    line-height: 42rpx;
    color: #B6B2CF;
    margin-bottom: 32rpx;
}
.pump-footer .txt .num{
    color: #FFB58C;
}
.record-btn{
    background: #7461E7;
    line-height: 100rpx;
    border-radius: 50rpx;
    font-size: 32rpx;
}





























