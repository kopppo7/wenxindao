<!--02meiritiaopin/index/index.wxml-->
<image class="m-p1" src="https://wenxin-file.oss-cn-beijing.aliyuncs.com/system/images/m-p1.jpg"
       wx:if="{{activeIndex === 0}}"></image>
<image class="m-p1" src="https://wenxin-file.oss-cn-beijing.aliyuncs.com/system/images/m-p1.jpg"
       wx:if="{{activeIndex === 1}}"></image>
<image class="m-p1" src="https://wenxin-file.oss-cn-beijing.aliyuncs.com/system/images/m-p1.jpg"
       wx:if="{{activeIndex === 2}}"></image>
<view class="wp" style="bottom: {{KeyBoardHeight}}px;">
    <view class="z-tab">
        <view class="{{activeIndex == index?'active tab-item':'tab-item'}}" wx:for="{{tabs}}" wx:key="index"
              wx:for-index="index"
              wx:for-item="item" bindtap="changeTab" data-ind="{{index}}">{{item}}
        </view>
        <!-- <view class="detail" bindtap="openPlayPop">帮助</view> -->
    </view>
    <view class="date-count">
        <view class="date">
            <view class="s1">
                <text>{{nowDate.day}}</text>
                {{nowDate.month}}月
            </view>
            <view class="s2">{{nowDate2}}</view>
        </view>
        <view class="count">
            <navigator url="/pages/my/trends/trends?type=1" class="s1">历史记录</navigator>
            <view class="s2">{{signNum}}人已打卡</view>
        </view>
    </view>
    <view class="m-ask" wx:if="{{activeIndex === 0}}">
        <view>设定生命意图可以让我们的每一天都过得生机盎然！</view>
        <view class="item">试着问问自己：</view>
        <view class="item dian">我想要用什么样的心情来度过今天，想要创造什么样的生命体验？</view>
        <view class="item">任意选择一张问心卡牌来探索即可。</view>
    </view>
    <view class="m-ask" wx:if="{{activeIndex === 1}}">
        <view class="item">设定每日要事可以让我们对生活的焦点保持觉察。</view>
        <view class="item">试着问问自己：</view>
        <view class="item dian">今天有什么对我的生命是极其重要的？</view>
        <view class="item">任意选择一张问心卡牌来探索即可。</view>
    </view>
    <view class="m-ask" wx:if="{{activeIndex === 2}}">
        <view class="item">每日复盘可以让我们把生活体验沉淀为生命的智慧。</view>
        <view class="item">试着这样总结：</view>
        <view class="item dian">我今天的收获是什么，又有什么是需要铭记和感恩的？</view>
        <view class="item">任意选择一张问心卡牌来探索即可。</view>
    </view>
    <form catchsubmit="addFm" class="form-z" wx:if="{{isEditFm}}">
        <view wx:for="{{contentsArray[activeIndex]}}" wx:for-index="idx" wx:for-item="content" wx:key="idx">
            <view class="z-btn" wx:if="{{!content.showCards}}" bindtap="getDayCard" data-index="{{idx}}">
                <image src="https://wenxin-file.oss-cn-beijing.aliyuncs.com/system/images/icon-fanpai.png"></image>
                抽牌获得启示
            </view>
            <!-- 二期再加换一换 -->
            <view wx:else>
                <view class="z-btn-row">
                    <!-- <view class="z-btn" bindtap="getChangeCard" data-index="{{idx}}">
                        <image src="https://wenxin-file.oss-cn-beijing.aliyuncs.com/system/images/refresh-cw-01.svg"></image>
                        换一换卡牌
                    </view>
                    <view class="right">
                        <view class="z-btn prev" bindtap="prevGroupIndex" data-index="{{idx}}"
                              wx:if="{{content.cardGroupIndex > 0 && content.cardGroup.length > 0}}">
                            <image src="/static/arrow-l.png"></image>
                            上一轮
                        </view>
                        <view class="z-btn next" bindtap="nextGroupIndex" data-index="{{idx}}"
                              wx:if="{{(content.cardGroupIndex < content.cardGroup.length - 1) && content.cardGroup.length > 0}}">
                            下一轮
                            <image src="/static/arrow-r.png"></image>
                        </view>
                    </view> -->
                </view>
                <view class="card-list">
                    <view wx:for="{{content.cardGroup[content.cardGroupIndex]}}" wx:for-index="index2" wx:key="index2"
                          class="{{content.cardIndex == index2?'active item':'item'}}"
                          wx:for-item="item" bindtap="changeCard" data-pindex="{{idx}}" data-ind="{{index2}}">
                        <view class="pic">
                            <image mode="aspectFill" src="{{item.imgUrl}}"></image>
                        </view>
                        <image bindtap="openBig" data-pindex="{{idx}}" data-index="{{index2}}" class="btn-fan"
                               src="https://wenxin-file.oss-cn-beijing.aliyuncs.com/system/images/icon-fan.png"></image>
                    </view>
                </view>
            </view>
            <view class="textarea-box">
                <textarea adjust-position="{{false}}" bindkeyboardheightchange="getKeyBoardHeight" bindinput="bindTextVal" placeholder="在这里输入探索答案（上限500字）" maxlength="500"
                          placeholder-style="color: #B6B2CF;" wx:if="{{content.putType == 1 || content.putType == 5}}"
                          value="{{content.txt}}" data-iid="{{idx}}"/>
                <!-- <view class="btn-yuyin" bindtap="changePutType" data-type="0" wx:if="{{content.putType == 1}}"
                      data-iid="{{idx}}">
                    <image src="https://wenxin-file.oss-cn-beijing.aliyuncs.com/system/images/icon-yuyin.png"></image>
                    语音输入
                </view> -->
                <view class="btn-audio" bindtap="playAudio" data-type="{{idx}}" wx:if="{{content.putType == 5}}">
                    <image src="https://wenxin-file.oss-cn-beijing.aliyuncs.com/system/images/audio.png"></image>
                    <text>{{content.times}}'</text>
                    <image data-iid="{{idx}}"
                           src="https://wenxin-file.oss-cn-beijing.aliyuncs.com/system/images/hsy/audio-del.png"
                           class="close" bindtap="closeAudio"></image>
                </view>
                <view class="btn-yuyin" bindtap="changePutType" data-type="1" wx:if="{{content.putType == 0}}"
                      data-iid="{{idx}}">
                    <image src="https://wenxin-file.oss-cn-beijing.aliyuncs.com/system/images/icon-yuyin.png"></image>
                    文字输入
                </view>
                <view class="m-luyin" wx:if="{{content.putType == 0}}">
                    <view class="btn-luyin" bindtap="start" wx:if="{{content.autioStatus == 1}}" data-iid="{{idx}}">
                        <image src="https://wenxin-file.oss-cn-beijing.aliyuncs.com/system/images/icon-luyin.png"></image>
                        <view class="txt">点击录音</view>
                    </view>
                    <view class="btn-luyin" bindtap="stop" wx:if="{{content.autioStatus == 2}}" data-iid="{{idx}}">
                        <image src="https://wenxin-file.oss-cn-beijing.aliyuncs.com/system/images/icon-luyin.png"></image>
                        <view class="txt">点击暂停</view>
                    </view>
                    <view class="close" bindtap="closeAudio" wx:if="{{content.autioStatus == 3}}" data-iid="{{idx}}">
                        <image src="https://wenxin-file.oss-cn-beijing.aliyuncs.com/system/images/icon-del.png"></image>
                    </view>
                    <view class="saveAudio" bindtap="saveAudio" wx:if="{{content.autioStatus == 3}}" data-iid="{{idx}}">
                        <image src="https://wenxin-file.oss-cn-beijing.aliyuncs.com/system/images/icon-ok.png"></image>
                    </view>
                    <view class="btn-luyin" bindtap="play" wx:if="{{content.autioStatus == 3}}" data-iid="{{idx}}">
                        <image src="https://wenxin-file.oss-cn-beijing.aliyuncs.com/system/images/icon-luyin.png"></image>
                        <view class="txt">点击播放</view>
                    </view>
                </view>
            </view>
        </view>
        
        <view class="addThing" bindtap="addThing" wx:if="{{activeIndex == 1&&contentsArray[activeIndex].length<3}}">
            <image class="m-p1"
                   src="https://wenxin-file.oss-cn-beijing.aliyuncs.com/system/images/hsy/plus.png"></image>
            <text class="name">添加一件事</text>
        </view>
        <radio-group bindchange="radioChange" wx:if="{{isOpen}}">
            <label class="label-radio">
                <radio value="1" checked="true"/>
                公开
            </label>
            <label class="label-radio">
                <radio value="0" />
                仅自己可见
            </label>
        </radio-group>
        <radio-group bindchange="radioChange" wx:else>
            <label class="label-radio">
                <radio value="1" />
                公开
            </label>
            <label class="label-radio">
                <radio value="0" checked="true" />
                仅自己可见
            </label>
        </radio-group>
        
        <view class="btn-box" wx:if="{{isEditFmChange}}">
            <button class="btn-submit"  formType="submit">完成</button>
            <button class="btn-share" bindtap="shareFm">分享</button>
        </view>
        <button formType="submit" class="btn-submit" wx:else>提交</button>
    </form>
    <view class="form-z" wx:else>
        <view wx:for="{{contentsArray[activeIndex]}}" wx:for-index="idx" wx:for-item="content" wx:key="idx">
            <view class="card-list">
                <view class="item">
                    <view class="pic">
                        <image mode="aspectFill" src="{{content.imgUrl}}"></image>
                    </view>
                    <image bindtap="openBig" class="btn-fan"
                            src="https://wenxin-file.oss-cn-beijing.aliyuncs.com/system/images/icon-fan.png"></image>
                </view>
            </view>
            <view class="textarea-box">
                <textarea adjust-position="{{false}}" bindkeyboardheightchange="getKeyBoardHeight" bindinput="bindTextVal" placeholder="在这里输入探索答案（上限500字）" maxlength="500" placeholder-style="color: #B6B2CF;" value="{{content.txt}}" disabled />
                <view class="btn-audio" bindtap="playAudio" data-type="{{idx}}" wx:if="{{content.voice}}">
                    <image src="https://wenxin-file.oss-cn-beijing.aliyuncs.com/system/images/audio.png"></image>
                    <text>{{content.times}}'</text>
                </view>
            </view>
        </view>
        <radio-group>
            <label class="label-radio" wx:if="{{isOpen}}">
                <radio value="1" checked="true"/>
                公开
            </label>
            <label class="label-radio" wx:else>
                <radio value="0" checked="true"/>
                仅自己可见
            </label>
        </radio-group>
        <view class="btn-box">
            <button class="btn-submit" bindtap="changeFm">修改</button>
            <button class="btn-share" bindtap="shareFm">分享</button>
        </view>
    </view>
</view>
