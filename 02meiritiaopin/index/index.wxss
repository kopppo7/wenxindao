page {
	padding: 20rpx 0 88rpx;
}

.m-p1 {
	position: absolute;
	top: 0;
	left: 0;
	width: 100%;
	height: 1030rpx;
	z-index: -1;
}

.date-count {
	display: flex;
	justify-content: space-between;
	margin-bottom: 120rpx;
}

.date-count .date {}

.date-count .date .s1 {
	font-size: 32rpx;
}

.date-count .date .s1 text {
	font-size: 100rpx;
	line-height: 1.2;
}

.date-count .date .s2 {
	font-size: 28rpx;
	opacity: 0.6;
}

.date-count .count {
	padding: 40rpx 0 0;
}

.date-count .count .s1 {
	width: 160rpx;
	height: 64rpx;
	line-height: 62rpx;
	text-align: center;
	background: linear-gradient(224.5deg, rgba(119, 138, 255, 0.18) 1.92%, rgba(255, 255, 255, 0.28) 92.09%);
	border: 0.5px solid rgba(255, 255, 255, 0.3);
	backdrop-filter: blur(12.2323px);
	border-radius: 16rpx;
	margin-bottom: 20rpx;
}

.date-count .count .s2 {
	font-size: 28rpx;
}

.m-ask {
	font-size: 30rpx;
	line-height: 42rpx;
	margin-bottom: 48rpx;
}
.m-ask .item.dian{
	position: relative;
	padding-left: 40rpx;
}
.m-ask .item.dian::before{
	content: "";
	position: absolute;left: 8rpx;top: 50%;width: 12rpx;height: 12rpx;
	border-radius: 12rpx;background-color: #fff;margin-top: -6rpx;
}
.z-btn {
	display: flex;
	align-items: center;
	justify-content: center;
	width: 360rpx;
	height: 90rpx;
	background: linear-gradient(248.27deg, rgba(119, 138, 255, 0.24) 18.05%, rgba(255, 255, 255, 0.32) 83.27%);
	border: 0.5px solid rgba(255, 255, 255, 0.2);
	backdrop-filter: blur(12.2323px);
	border-radius: 60rpx;
	margin-bottom: 64rpx;
}

.z-btn image {
	width: 40rpx;
	height: 40rpx;
	margin-right: 16rpx;
}

.form-z .textarea-box {
	position: relative;
	margin-bottom: 24rpx;
	height: 320rpx;
	background: rgba(29, 31, 48, 0.8);
	border: 0.5px solid rgba(255, 255, 255, 0.2);
	backdrop-filter: blur(12.2323px);
	border-radius: 24rpx;
	padding: 24rpx;
}

.form-z .textarea-box textarea {
	display: block;
	width: 100%;
	height: 100rpx;
}

.form-z .textarea-box .btn-yuyin {
	position: absolute;
	bottom: 24rpx;
	left: 24rpx;
	display: flex;
	justify-content: center;
	align-items: center;
	width: 208rpx;
	height: 72rpx;
	line-height: 70rpx;
	background: linear-gradient(248.27deg, rgba(119, 138, 255, 0.096) 18.05%, rgba(255, 255, 255, 0.128) 83.27%);
	border: 0.5px solid rgba(255, 255, 255, 0.2);
	border-radius: 16rpx;
	color: #B6B2CF;
}

.form-z .textarea-box .btn-yuyin image {
	width: 32rpx;
	height: 32rpx;
	margin-right: 16rpx;
}

.form-z .textarea-box .btn-luyin {
	position: absolute;
	top: 86rpx;
	left: 50%;
	-webkit-transform: translateX(-50%);
	-moz-transform: translateX(-50%);
	-ms-transform: translateX(-50%);
	-o-transform: translateX(-50%);
	transform: translateX(-50%);
}
.m-luyin .close{
	position: absolute;
	top: 100rpx;
	left: 50%;
	margin-left: -150rpx;
}
.m-luyin .close image{
	width: 64rpx;
	height: 64rpx;
	margin-right: 16rpx;
}
.m-luyin .saveAudio{
	position: absolute;
	top: 100rpx;
	left: 50%;
	margin-left: 60rpx;
	
}
.m-luyin .saveAudio image{
	width: 64rpx;
	height: 64rpx;
	margin-left: 16rpx;
}
.form-z .textarea-box .btn-luyin image {
	width: 96rpx;
	height: 96rpx;
}

.form-z .textarea-box .btn-luyin .txt {
	font-size: 26rpx;
	color: #b6b2cf;
	text-align: center;
}

.form-z .btn-submit {
	display: block;
	font-size: 32rpx;
	color: #ffffff;
	width: 100%;
	height: 100rpx;
	line-height: 100rpx;
	background: #7461E7;
	border-radius: 72rpx;
}
.btn-audio{
	position: absolute;
	bottom: 24rpx;
	left: 24rpx;
	display: -webkit-flex;display: flex;justify-content: center;/* 水平居中 */align-items:center;font-size: 32rpx;color: #fff;
}
.btn-audio text{
	position: absolute;right: 48rpx;top: 0;line-height: 72rpx;
}
.btn-audio .icon{
	position: absolute;left: 48rpx;top: 0;
}
.btn-audio .close{
	position: absolute;right: -50rpx;width: 32rpx;height: 32rpx;top: 50%;margin-top: -16rpx;
}
.btn-audio image{
	width: 290rpx;
	height: 72rpx;
	margin-right: 20rpx;
}
.form-z radio-group {
	margin-bottom: 48rpx;
}


.card-list {
	display: flex;
	justify-content: space-between;
	margin-bottom: 54rpx;
}

.card-list .item {
	position: relative;
	width: 212rpx;
}

.card-list .item .pic {
	border: 1px solid transparent;
	border-image: linear-gradient(#FFDC81, #FF8866) 1;
	border-radius: 24rpx;
	height: 320rpx;
	padding: 4rpx;
	clip-path: inset(0 0 round 5px);
}

.card-list .item .pic image {
	display: block;
	width: 100%;
	height: 100%;
	border-radius: 24rpx;
}

.card-list .item .btn-fan {
	position: absolute;
	bottom: 8rpx;
	right: 8rpx;
	width: 48rpx;
	height: 48rpx;
}

.card-list .item.active {}

.card-list .item.active .pic {
	height: 340rpx;
	margin-top: -10rpx;
	background: #ffffff;
	border: 1px solid #ffffff;
}

.pop-intro {}

.pop-intro .pop-intro-item {}

.pop-intro .pop-intro-item .tit {
	font-size: 32rpx;
	margin-bottom: 24rpx;
}

.pop-intro .pop-intro-item .desc {
	font-size: 28rpx;
	line-height: 44rpx;
	opacity: .6;
}

.pop-big {
	position: fixed;
	top: 50%;
	left: 50%;
	-webkit-transform: translate(-50%, -50%);
	-moz-transform: translate(-50%, -50%);
