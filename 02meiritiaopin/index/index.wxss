	-o-transform: translate(-50%, -50%);
	transform: translate(-50%, -50%);
	z-index: 801;
}

.pop-big .big-pic {
	width: 670rpx;
	height: 998rpx;
}

.pop-close-bot {
	position: absolute;
	bottom: -116rpx;
	left: 50%;
	margin-left: -48rpx;
	width: 96rpx;
	height: 96rpx;
	z-index: 801;
}
