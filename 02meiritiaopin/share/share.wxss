}
.date-mod .date-box .date{
	font-size: 40rpx;
	line-height: 1;
}
.head-img{
	position: absolute;
	display: flex;
	align-items: center;
	left: 0;
	top: 155rpx;
	width: 245rpx;
}
.head-img .name{
	flex:1;
	width: 0;
	white-space: nowrap;overflow: hidden;text-overflow: ellipsis;
	font-size: 28rpx;
	color: #222537;
	margin-left: 20rpx;
}
.content{
	padding-top: 250rpx;
	width: 100%;
	overflow: hidden;
}
.text-mod-top{
	display: flex;
	justify-content: space-between;
}
.text-mod-top .l{
	flex:0 0 200rpx
}
.text-mod-top .r{
	flex:0 0 350rpx;
}
.content .card{
	width: 350rpx;
	height: 526rpx;
	overflow: hidden;
	border-radius: 24rpx;
	border: 4px solid rgba(182, 178, 207, 0.18);
}
.content .title{
	color: #000000;
	font-size: 36rpx;
	text-align: center;
	margin-bottom: 30rpx;

}
.content .text{
	font-size: 28rpx;
	color: #222537;
	text-indent: 2em;
}
.content .text.text2{
	float: none;
	width: auto;
	text-indent: 0;
}

.content .yin{
	width: 40rpx;
	height: 40rpx;
	text-align: left;
}
.content .yin.end{
	display: inline-block;
}
.content .card image{
	display: block;width: 100%;height: 100%;
}
