.tools-box{
	display: flex;
	justify-content: center;
	margin-top: 36rpx;
}
.tools-box .tools-item{
	display: flex;
	justify-content: center;
	align-items: center;
	width: 208rpx;
	height: 96rpx;
	background: #ffffff;
	border-radius: 48rpx;
	color: #2a2230;
