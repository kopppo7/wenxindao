.myCanvas{
	margin: 0 auto;
	width: 670rpx;
	/*height: 100vh;*/
	position: fixed;left: -99999px;top: 0;  background-color: transparent;
	opacity: 0;
	z-index: -2;
}

.date-mod{
	position: absolute;
	right: -20rpx;
	top: 10rpx;
	display: flex;
	align-items: center;
	line-height: 1;
}
.date-mod .days{
	font-size: 112rpx;
	line-height: 1;
}
.date-mod .date-box{
	margin-left: 8rpx;
	font-size: 0;
}
.date-mod .date-box .lc{
	font-size: 32rpx;
	line-height: 1;
}
.date-mod .date-box .gang{
	line-height: 1;
	margin: 8rpx 20rpx;
	display: inline-block;
	-webkit-transform-origin: 50% 50%;-moz-transform-origin: 50% 50%;-ms-transform-origin: 50% 50%;-o-transform-origin: 50% 50%;transform-origin: 50% 50%;
