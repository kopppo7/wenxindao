<!--02meiritiaopin/share/share.wxml-->
<view class="canvas-box">
    <view class="s1">
        <image class="s1-l" src="https://wenxin-file.oss-cn-beijing.aliyuncs.com/system/images/home-avatar2.png"></image>
        <view class="s1-r">
            <view class="days">{{nowDate.gregorianDay}}</view>
            <view class="date-box">
                <view class="lc">{{nowDate.chineseMonth}}{{nowDate.chineseDay}}</view>
                <view class="date">{{nowDate.gregorianYear}}.{{nowDate.gregorianMonthBase1}}</view>
            </view>
        </view>
    </view>
    <image class="s2" src="{{cardImg}}"></image>
    <view class="s3">
        <!-- <view class="s3-item">感恩</view> -->
        <!-- <view class="s3-item">敏锐</view> -->
        <!-- <view class="s3-item">觉察</view> -->
    </view>
    <view class="s4">
        <view>{{content.txt}}</view>
    </view>
    <view class="s5">
        <view class="s5-l">
            <view class="s5-l-item">
                <view class="s5-l-tit">打卡时间</view>
                <view class="s5-l-time">{{cardTime}}</view>
            </view>
            <view class="s5-l-item">
                <view class="s5-l-tit">连续打卡</view>
                <view class="s5-l-time">{{cardCount}}天</view>
            </view>
        </view>
        <view class="s5-r">
            <image class="qr" src="https://wenxin-file.oss-cn-beijing.aliyuncs.com/system/images/qr.png"></image>
        </view>
    </view>
</view>
<view class="tools-box">
    <view class="tools-item"><image src="https://wenxin-file.oss-cn-beijing.aliyuncs.com/system/images/share-weixin.png"></image>微信好友</view>
    <view class="tools-item"><image src="https://wenxin-file.oss-cn-beijing.aliyuncs.com/system/images/share-friends.png"></image>朋友圈</view>
    <view class="tools-item"><image src="https://wenxin-file.oss-cn-beijing.aliyuncs.com/system/images/share-download.png"></image>保存本地</view>
</view>
