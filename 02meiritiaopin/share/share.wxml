<!--02meiritiaopin/share/share.wxml-->
<view class="canvas-box my_canvas my_draw_canvas" id="my-canvas">
	<image
		mode="widthFix"
		class="canvas-bg my_draw_canvas"
		data-url="https://file.wxdao.net/2023-04/75970e21-b858-452f-8f7c-06e5598be3e9.png"
		data-type="image"
		src="https://file.wxdao.net/2023-04/75970e21-b858-452f-8f7c-06e5598be3e9.png"
		
	></image>
	<view class="my_draw_canvas canvas-content">
		<view class="date-mod my_draw_canvas">
			<view
				class="days my_draw_canvas"
				data-type="text"
				data-text="{{ nowDate.day }}"
			>
				{{ nowDate.day }}
			</view>
			<view class="date-box my_draw_canvas">
				<view
					class="lc my_draw_canvas"
					data-type="text"
					data-text="{{ nowDate.chinese }}"
				>
					{{ nowDate.chinese}}
				</view>
				<view class="gang my_draw_canvas" data-type="text" data-text="/">
					/
				</view>
				<view class="date my_draw_canvas" data-type="text"
                      data-text="{{nowDate.year}}.{{nowDate.month}}">
                    {{nowDate.year}}.{{nowDate.month}}
                </view>
			</view>
		</view>
		<view class="head-img my_draw_canvas">
			<image
				class="s1-l my_draw_canvas"
				mode="aspectFill"
				src="{{ headImg }}"
				data-type="image"
				data-url="{{ headImg }}"
				
			></image>
			<view
				class="name my_draw_canvas"
				data-type="text"
				data-text="{{ userName }}"
				>{{ userName }}</view
			>
			<view
				data-type="text"
				class="title my_draw_canvas"
				data-text="{{ typeTit }}"
			>
				{{ typeTit }}
			</view>
		</view>
		<view class="content my_draw_canvas">
			<view class="text-mod-top">
				<!-- <div class="l">
					
					<image
						class="my_draw_canvas yin"
						src="https://file.wxdao.net/2023-01/999d11d6-5268-4358-9ec5-42f25e74a64b.png"
						data-type="image"
						data-url="https://file.wxdao.net/2023-01/999d11d6-5268-4358-9ec5-42f25e74a64b.png"
						
					></image>
				</div> -->
				<!-- <div class="r">
				</div> -->
				<view class="card my_draw_canvas">
					<image
						class="my_draw_canvas"
						src="{{ cardImg }}"
						data-type="image"
						data-url="{{ cardImg }}"
						
					></image>
				</view>
			</view>
			<view
				data-type="text"
				wx:if="{{ txt1 }}"
				class="text text2 my_draw_canvas"
				data-text="{{ txt1 }}"
			>
				{{ txt1 }}
			</view>
		</view>
		<view class="s5 my_draw_canvas">
			<view class="s5-l">
				<view class="s5-l-item">
					<view
						class="s5-l-tit my_draw_canvas"
						data-type="text"
						data-text="打卡时间"
						>打卡时间</view
					>
					<view
						class="s5-l-time my_draw_canvas"
						data-type="text"
						data-text="{{ cardTime }}"
						>{{ cardTime }}</view
					>
				</view>
				<view class="gang my_draw_canvas" data-type="text" data-text="/">
					/
				</view>
				<view class="s5-l-item">
					<view
						class="s5-l-tit my_draw_canvas"
						data-type="text"
						data-text="连续打卡"
						>连续打卡</view
					>
					<view
						class="s5-l-time my_draw_canvas"
						data-type="text"
						data-text="{{ cardCount }}天"
						>{{ cardCount }}天
					</view>
				</view>
			</view>
			<view class="s5-r">
				<image
					data-type="image"
					data-url="https://file.wxdao.net/2023-04/0ad041a2-3e20-4de0-9945-faf97ea8572e.png"
					class="qr my_draw_canvas"
					src="https://file.wxdao.net/2023-04/0ad041a2-3e20-4de0-9945-faf97ea8572e.png"
					
				></image>
			</view>
		</view>
	</view>
</view>
<canvas
	canvas-id="myCanvas"
	height="{{ height }}"
	style="{{ 'height:' + height + 'px' }}"
	class="myCanvas"
></canvas>
<view class="tools-box">
	<view class="tools-item" bindtap="share1">
		<image
			src="https://wenxin-file.oss-cn-beijing.aliyuncs.com/system/images/share-weixin.png"
		></image>
		微信好友
	</view>
	<!-- <button class="tools-item" open-type="share"><image src="https://wenxin-file.oss-cn-beijing.aliyuncs.com/system/images/share-friends.png"></image>朋友圈</button> -->
	<view class="tools-item" bindtap="savePoster">
		<image
			src="https://wenxin-file.oss-cn-beijing.aliyuncs.com/system/images/share-download.png"
		></image>
		保存本地
	</view>
</view>
