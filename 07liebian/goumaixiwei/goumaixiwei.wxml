<!--07liebian/goumaixiwei/goumaixiwei.wxml-->
<view class="wp">
    <view class="buy-one">
        <view class="buy-pic">
            <image mode="widthFix" src="https://wenxin-file.oss-cn-beijing.aliyuncs.com/system/images/1.png"></image>
        </view>
        <view class="buy-text">
            <view class="title">{{detailObj.title}}</view>
            <view class="text">参与人数：{{detailObj.minNumber}}-{{detailObj.maxNumber}}人/场</view>
            <view class="seat" wx:if="{{type === 1}}">
                <view class="price">
                    ¥ <text>{{detailObj.soloPrice}}</text>
                </view>
                / 席位
            </view>
            <view class="seat" wx:if="{{type === 2}}">
                <view class="price">
                    ¥ <text>{{detailObj.allPrice}}</text>
                </view>
                / 场
            </view>
        </view>
    </view>
    <view class="buy-list">
        <view class="item" bindtap="pickType" data-type="2" wx:if="{{only==0||only==2}}">
            <view class="buy-area">
                <view class="text">
                    <view class="p1">快速匹配</view>
                    <view class="p2">系统自动匹配好友参与</view>
                </view>
                <view class="info">
                    <view class="seat">
                        <view class="price">
                            ¥ <text>{{detailObj.soloPrice}}</text>
                        </view>
                        / 席位
                    </view>
<!--                    <view class="tag">-->
<!--                        首单免费-->
<!--                    </view>-->
                </view>
            </view>
            <view class="icon">
                <image class="icon"
                 wx:if="{{type === 2}}"
                       src="https://wenxin-file.oss-cn-beijing.aliyuncs.com/system/images/icon-ClickBox-on.png"></image>
                <image class="icon"
                       wx:else
                       src="https://wenxin-file.oss-cn-beijing.aliyuncs.com/system/images/icon-ClickBox.png"></image>
            </view>
            
        </view>
        <view class="item item2" bindtap="pickType" data-type="1"  wx:if="{{only==0||only==1}}">
            <view class="buy-area">
                <view class="text">
                    <view class="p1">好友结伴</view>
                    <view class="p2">包场，一场最多可容纳{{detailObj.maxNumber}}个人</view>
                </view>
                <view class="info">
                    <view class="seat">
                        <view class="price">
                            ¥ <text>{{detailObj.allPrice}}</text>
                        </view>
                        / 场
                    </view>
<!--                    <view class="tag">-->
<!--                        首单免费-->
<!--                    </view>-->
                </view>
            </view>
            <view class="icon">
                <image class="icon"
                       wx:if="{{type === 1}}"
                       src="https://wenxin-file.oss-cn-beijing.aliyuncs.com/system/images/icon-ClickBox-on.png"></image>
                <image class="icon"
                       wx:else
                       src="https://wenxin-file.oss-cn-beijing.aliyuncs.com/system/images/icon-ClickBox.png"></image>
            </view>
        </view>
    </view>
</view>
<view class="bottom-box">
    <view class="wp">
        <view class="btn-praise" bindtap="handleShowPop">去支付</view>
    </view>
</view>
<block wx:if="{{isShowPop}}">
    <view class="pop-mask"></view>
    <view class="pop-win2">
        <view class="pop-tit">购买须知</view>
        <view class="desc">
            主题派对购买后仅限单次使用
        </view>
        <view class="btns">
            <view class="btn ok" bindtap="pay">知道了</view>
        </view>
    </view>
</block>
