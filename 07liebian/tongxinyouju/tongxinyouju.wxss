.post-list{}
.post-list .item{
    background: rgba(182,178,207,0.12);
    border-radius: 16rpx;
    padding: 24rpx;
    margin-bottom: 24rpx;
}
.post-list .item .title{
    font-weight: 600;
    font-size: 32rpx;
    margin-bottom: 12rpx;
}
.post-list .item .other{
    display: flex;
    justify-content: space-between;
    align-items: center;
    font-size: 24rpx;
    color: #9A9BAC;
    font-weight: 400;
    margin-bottom: 32rpx;
}
.post-btn{
    display: flex;
    justify-content: space-between;
    align-items: center;
    width: 290rpx;
    height: 72rpx;
    line-height: 72rpx;
    border-radius: 16rpx;
    padding: 0 24rpx;
    margin-bottom: 16rpx;
    background-size: cover;
}
.post-btn .line-box{
   width: 60rpx;
   height: 32rpx;
}
.post-btn .line-box image{
    display: block;
    width: 100%;
}
.post-btn .second{
    font-family: DINPro-Medium, DINPro;
}

.bottom-box{
    position: fixed;
    bottom: 0;
    padding-top: 20rpx;
	padding-bottom: 68rpx;
	left: 0;
	right: 0;
	background: #171A28;
	z-index: 100;
}
.bottom-box .btn-praise{
    text-align: center;
    height: 100rpx;
    line-height: 100rpx;
    border-radius: 50rpx;
    background: #7461E7;
    font-size: 30rpx;
}



























