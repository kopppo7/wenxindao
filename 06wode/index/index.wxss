/* 06wode/index/index.wxss */
.mine-row1{
	display: flex;
	align-items: center;
	margin: 64rpx 0;
}
.mine-row1 .avatar{
	flex: 0 0 112rpx;
	height: 112rpx;
	margin-right: 24rpx;
	border-radius: 50%;
}
.mine-row1 .name{
	font-size: 40rpx;
	flex: 1;
}
.mine-row1 .set{
	width: 48rpx;
	height: 48rpx;
}
.mine-row2{
	display: flex;
	justify-content: space-between;
	margin-bottom: 80rpx;
}
.mine-row2 .item{
	font-size: 30rpx;
	color: #ffffff;
	display: flex;
	justify-content: center;
	align-items: center;
	width: 320rpx;
	height: 92rpx;
	background: rgba(182, 178, 207, 0.12);
	backdrop-filter: blur(12px);
	border-radius: 16rpx;
}
.mine-row2 .item image{
	width: 48rpx;
	height: 48rpx;
	margin-right: 12rpx;
}
.mine-row2 .item text{
	font-size: 24rpx;
	color: #ffffff;
	width: 32rpx;
	height: 32rpx;
	line-height: 32rpx;
	text-align: center;
	background: linear-gradient(225deg, #F0273F 0%, #BC61E7 100%);
	box-shadow: 0px 2px 2px rgba(188, 97, 231, 0.2);
	border-radius: 50%;
	margin-left: 12rpx;
}
.mine-row3{

}
.mine-row3 .title-box{
	display: flex;
	justify-content: space-between;
	align-items: center;
	margin-bottom: 32rpx;
}
.mine-row3 .title-box .title{
	position: relative;
	font-size: 36rpx;
	color: #ffffff;
	padding-left: 22rpx;
}
.mine-row3 .title-box .title:before{
	content: '';
	position: absolute;
	top: 50%;
	left: 0;
	margin-top: -17rpx;
	width: 6rpx;
	height: 34rpx;
	background: #FFB58C;
	border-radius: 6rpx;
}
.mine-row3 .title-box image{
	width: 48rpx;
	height: 48rpx;
}

