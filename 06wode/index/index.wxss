/* 06wode/index/index.wxss */
.mine-row1{
	display: flex;
	align-items: center;
	margin: 64rpx 0;
}
.mine-row1 .avatar{
	flex: 0 0 112rpx;
	height: 112rpx;
	margin-right: 24rpx;
	border-radius: 50%;
}
.mine-row1 .name{
	font-size: 40rpx;
	flex: 1;
}
.mine-row1 .set{
	width: 48rpx;
	height: 48rpx;
}
.mine-row2{
	display: flex;
	justify-content: space-between;
	margin-bottom: 80rpx;
}
.mine-row2 .item{
	font-size: 30rpx;
	color: #ffffff;
	display: flex;
	justify-content: center;
	align-items: center;
	width: 320rpx;
	height: 92rpx;
	background: rgba(182, 178, 207, 0.12);
	backdrop-filter: blur(12px);
	border-radius: 16rpx;
}
.mine-row2 .item image{
	width: 48rpx;
	height: 48rpx;
	margin-right: 12rpx;
}
.mine-row2 .item text{
	font-size: 24rpx;
	color: #ffffff;
	width: 32rpx;
	height: 32rpx;
	line-height: 32rpx;
	text-align: center;
	background: linear-gradient(225deg, #F0273F 0%, #BC61E7 100%);
	box-shadow: 0px 2px 2px rgba(188, 97, 231, 0.2);
	border-radius: 50%;
	margin-left: 12rpx;
}
.mine-row3{

}
.mine-row3 .title-box{
	display: flex;
	justify-content: space-between;
	align-items: center;
	margin-bottom: 32rpx;
}
.mine-row3 .title-box .title{
	position: relative;
	font-size: 36rpx;
	color: #ffffff;
	padding-left: 22rpx;
}
.mine-row3 .title-box .title:before{
	content: '';
	position: absolute;
	top: 50%;
	left: 0;
	margin-top: -17rpx;
	width: 6rpx;
	height: 34rpx;
	background: #FFB58C;
	border-radius: 6rpx;
}
.mine-row3 .title-box image{
	width: 48rpx;
	height: 48rpx;
}
.trend-list{

}
.trend-list .trend-item{
	margin-bottom: 48rpx;
}
.trend-list .time{
	font-size: 24rpx;
	color: #B6B2CF;
}
.trend-list .box{
	padding: 24rpx;
	background: rgba(182, 178, 207, 0.12);
	backdrop-filter: blur(12px);
	border-radius: 8px;
}
.trend-list .box .title{
	font-size: 32rpx;
	color: #ffffff;
	margin-bottom: 16rpx;
}
.trend-list .box .type-list{
	display: flex;
	margin-bottom: 32rpx;
}
.trend-list .box .type-list .type-item{
	display: inline-flex;
	align-items: center;
	padding: 0 24rpx;
	height: 56rpx;
	backdrop-filter: blur(12.2323px);
	border-radius: 66rpx;
	margin-right: 16rpx;
}
.trend-list .box .type-list .type-item.c1{
	background: linear-gradient(224.5deg, rgba(178, 139, 222, 0.2) 1.92%, rgba(255, 255, 255, 0.08) 92.09%);
	color: #b28bde;
}
.trend-list .box .type-list .type-item.c2{
	background: linear-gradient(224.5deg, rgba(255, 181, 140, 0.2) 1.92%, rgba(255, 255, 255, 0.08) 92.09%);
	color: #FFB58C;
}
.trend-list .box .type-list .type-item.c3{
	background: linear-gradient(224.5deg, rgba(98, 201, 220, 0.2) 1.92%, rgba(255, 255, 255, 0.08) 92.09%);
	color: #62C9DC;
}
.trend-list .box .pictxt{
	display: flex;
}
.trend-list .box .pictxt .pic{
	flex: 0 0 168rpx;
	height: 248rpx;
	margin-right: 24rpx;
	border-radius: 16rpx;
}
.trend-list .box .pictxt .txt{
	font-size: 24rpx;
	line-height: 40rpx;
}
.trend-list .pic-list{
	display: flex;
	flex-wrap: wrap;
	margin-right: -26rpx;
}
.trend-list .pic-list .pic{
	width: 192rpx;
	height: 272rpx;
	border-radius: 16rpx;
	margin-bottom: 24rpx;
	margin-right: 24rpx;
}
.trend-list .count-box{
	display: flex;
	align-items: center;
}
.trend-list .count-box .avatar-box{
	display: flex;
	margin-right: 16rpx;
}
.trend-list .count-box .avatar-box .avatar{
	width: 48rpx;
	height: 48rpx;
	border-radius: 50%;
	box-shadow: 0 4rpx 4rpx #1E1F31;
	margin-left: -16rpx;
}
.trend-list .count-box .txt{
	font-size: 24rpx;
	color: #ffffff;
}
.trend-list .count-box .txt text{
	color: #ffb58c;
	opacity: .9;
}
.trend-list .box .imgtxt{
	margin-bottom: 32rpx;
}
