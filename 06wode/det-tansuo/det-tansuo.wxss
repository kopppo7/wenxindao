.wp{
  padding-top: 40rpx;
}
.page-title{
  margin-bottom: 40rpx;
  text-align: center;
  font-size: 40rpx;
  color: #ffffff;
}
.face{
  display: flex;
  align-items: center;
}
.face .pic{
  flex:0 0 96rpx;
  height: 96rpx;
  border-radius: 50%;
  overflow: hidden;
  margin-right: 16rpx;
}
.face .pic image{
  display: block;
  width: 100%;
  height: 100%;
}
.face .txt{
  flex:1;
}
.face .txt .name{
  font-size: 32rpx;
  color: #ffffff;
  margin-bottom: 12rpx;
}
.face .txt .date{
  color: #B6B2CF;
  font-size: 24rpx;
} 
.list .item{ 
  margin-top: 32rpx;
  background: rgba(182, 178, 207, 0.12);
  backdrop-filter: blur(12px); 
  border-radius: 8px;
  padding: 24rpx;
}
.list .item .desc{
  font-size: 28rpx;
  color: #ffffff;
  line-height: 40rpx;
  margin-bottom: 16rpx;
}
.list .item .desc text{
  color: #FFB58C;
}
.list .item .pic{
  width: 178rpx;
  height: 248rpx;
  border-radius: 10rpx;
  overflow: hidden;
}
.list .item .pic image{
  display: block;
  width: 100%;
  height: 100%;
}
.list .item .audio{
  height: 72rpx;
  background: #000;
  margin-top: 32rpx;
}















